NAME = libft.a
cc = cc
srcs = $(wildcard *.c)
objects = $(srcs:.c=.o)
flags = -Wall -Wextra -Werror
rm = rm -f

all: $(NAME)

$(NAME): $(objects)
		ar -rcs $(NAME) $(objects)

%.o: %.c
		$(cc) -c $(flags) $< -o $@

clean:
		$(rm) $(objects)

fclean: clean
		$(rm) $(NAME)

re: fclean $(NAME)

.PHONY: all clean fclean re


